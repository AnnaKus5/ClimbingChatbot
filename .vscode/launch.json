{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug nodemon",
            "type": "node",
            "request": "attach",
            "restart": true,
            "port": 9229,
            "skipFiles": ["<node_internals>/**"],
            "localRoot": "${workspaceFolder}/server",
            "remoteRoot": "${workspaceFolder}/server",
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/server",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/server/**",
                "!**/node_modules/**"
            ]
        }
    ]
}